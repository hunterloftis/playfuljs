.Article
  padding-bottom 40px

.Article-top
  padding-top 10px

.Article-date
  font-style italic
  text-align left
  font-size 0.9rem

.Article-list
  padding-bottom 40px

.Article-contents
  code
    padding 10px
    display block
    overflow-x auto
    -webkit-overflow-scrolling touch

  img
    display block
    width 100%

.Article-thumb
  width 100%
  background #eee
  margin-top 30px
  display block
  box-shadow 0px 10px 28px 3px rgba(0,0,0,0.3)

.Article-avatar
  width 64px
  height 64px
  border-radius 50%
  background dark-color center center no-repeat
  background-size cover
  display inline-block
  vertical-align top
  margin 10px 20px 10px 10px
  position relative
  top 3px

.Article-header
  display inline-block
  vertical-align top

